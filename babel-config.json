{
  "extends": "./index-config.json",
  "parser": "babel-eslint",
  "env": {
    "es6": true
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "import/default": 2,
    "import/export": 2,
    "import/imports-first": 2,
    "import/named": 2,
    "import/namespace": 2,
    "import/no-duplicates": 2,
    "import/no-errors": 0,
    "import/no-named-as-default": 2,
    "import/no-require": 0,
    "import/no-unresolved": 2,

    "arrow-parens": [1, "as-needed"],
    "arrow-spacing": [2, { "before": true, "after": true }],
    "constructor-super": 2,
    "generator-star-spacing": [2, { "before": true, "after": false }],
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 2,
    "no-var": 1,
    "object-shorthand": [1, "always"],
    "prefer-arrow-callback": 1,
    "prefer-const": 1,
    "prefer-reflect": 0,
    "prefer-spread": 2,
    "prefer-template": 1,
    "require-yield": 2,
    "strict": [1, "never"]
  }
}
